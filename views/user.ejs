<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My collectors</title>
    <link rel="stylesheet" href="/views/styles.css">
</head>
<body>
    <script src="/views/script.js"></script>
    <div class="container">
        <h1><%= __('i18n.views.manage.my-collectors') %></h1>

        <!-- CREDENTIAL LIST -->

        <div id="credentials-list"></div>

        <!-- ADD CREDENTIALS -->

        <button id="add-credential-button"><%= __('i18n.views.manage.add-collectors') %></button>
        <div id="company-list" style="display: none;">
            <h2><%= __('i18n.views.manage.select-collectors') %></h2>
            <ul id="companies"></ul>
        </div>

        <!-- ADD CREDENTIAL FORM -->

        <div id="add-credential-form-container" style="display: none;">
            <h2><%= __('i18n.views.manage.add-collectors') %></h2>
            <div class="company-item">
                <img id="company-logo" src="" alt="" class="company-image">
                <div class="company-info">
                    <h3 id="company-name"></h3>
                    <p id="company-description"></p>
                </div>
            </div>
            <form id="add-credential-form">
            </form>
        </div>
    </div>
</body>
</html>
